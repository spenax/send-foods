<div class="chart-head">
  <h2> <%= @emoji %> vs 🍆<br>(daily totals)</h2>
  <h4></h4>
</div>

<div class="comp-chart">

  <% data = {
    labels: ["Past 72 hours", "Past 48 hours", "Past 24 hours"],
    datasets: [
      {
          label: @emoji,
          #backgroundColor: "rgba(151,187,205,0.2)",
          #borderColor: "rgba(151,187,205,1)",
          backgroundColor: "rgba(61, 162, 104,0.2)",
          borderColor: "rgba(61, 162, 104,1)",
          data: [@day_two , @day_one , @day_zero]
      },
      {
          label: "🍆",
          #backgroundColor: "rgba(220,220,220,0.2)",
          #borderColor: "rgba(220,220,220,1)",
          backgroundColor: "rgba(100, 37, 254, 0.2)",
          borderColor: "rgba(100, 37, 254, 1)",

          data: [@egg_day_two, @egg_day_one, @egg_day_zero]
      }
    ]
  }
  options = { begin_at_zero: "true", width: "800" } %>
  <%= line_chart data, options %>

</div>

